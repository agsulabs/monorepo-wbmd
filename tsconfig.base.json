{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "declaration": false,
    "sourceMap": true,

    "baseUrl": ".",

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  }
}
