{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "monorepo-desktop",
  "version": "0.1.0",
  "identifier": "com.monorepo.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "pnpm ui:dev",
    "beforeBuildCommand": "pnpm ui:build"
  },
  "app": {
    "windows": [
      {
        "title": "Monorepo Desktop",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
